{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": 1,
    "jasmine": 1,
  },
  "globals": {},
  "extends": "google",
  "rules": {
    "max-nested-callbacks": 0,
    "no-console": 0,
    "comma-dangle": ["error", "never"],
    "func-names": 0,
    "semi": "error",
    "padded-blocks": 0,
    "spaced-comment": 0,
    "valid-jsdoc": 0,
    "require-jsdoc": 0,
    "arrow-parens": ["error", "always"],
    "space-before-blocks": ["error", {
      "functions": "never",
      "keywords": "never",
      "classes": "always"
    }],
    "one-var": ["error", {
        "var": "always",
        "let": "never",
        "const": "never"
    }],
    "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "quote-props": ["error", "as-needed"]
  }
}
